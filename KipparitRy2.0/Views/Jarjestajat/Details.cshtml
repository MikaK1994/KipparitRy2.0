<div class="margin">
    @model KipparitRy2._0.Models.Jarjestajat

    @{
        ViewBag.Title = "Details";
    }

    <h2>Tiedot</h2>

    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>Järjestäjän nimi</dt>
            <dd>@Html.DisplayFor(model => model.Nimi)</dd>
            <dt>Tilaisuus</dt>
            <dd>@Html.DisplayFor(model => model.Tilaisuudet.Nimi)</dd>

        </dl>
    </div>
    <p>
        <a class="btn btn-success" href="~/Jarjestajat/Edit/@Model.JarjestajaID">Muokkaa</a>
        <a class="btn btn-primary" href="~/Jarjestajat/">Takaisin listaan</a>
    </p>
</div>