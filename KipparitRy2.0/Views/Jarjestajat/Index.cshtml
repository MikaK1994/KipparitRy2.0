@model PagedList.IPagedList<KipparitRy2._0.Models.Jarjestajat>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Index";
}

<h2>Järjestäjät</h2>

@using (Html.BeginForm("Index", "Jarjestajat", FormMethod.Get))
{
    <div class="input-group">
        @*Tämä tulostaa paragrafit rinnakkain, eikä erilleen*@
        @*px-1 meinaa, että ympärillä on paddingiä/tilaa*@
        <p class="px-1">@Html.Label("Etsi nimellä:")</p> @*Otsikko*@
        <p class="px-1">@Html.TextBox("SearchString", ViewBag.currentFilter as string, new { @class = "form-control" })</p> @*Tällä nimellä kontrolleri näkee mitä tekstiboksiin on syötetty *@
        <p class="px-1"><input type="submit" value="Etsi" class="form-control" /></p> @*buttoni*@
    </div>
}

<p>
    @*@Html.ActionLink("Create New", "Create")*@
    <a class="btn btn-primary" href="~/Jarjestajat/Create/">Luo uusi järjestäjä</a>
</p>
<table class="table table-striped">
    <tr>
        <th>@Html.ActionLink("Nimi", "Index", new { sortOrder = ViewBag.CustomerNameSortParm, currentFilter = ViewBag.currentFilter })</th>
        @*<th>@Html.DisplayNameFor(model => model.Nimi)</th>*@
        @*<th>@Html.DisplayNameFor(model => model.Tilaisuudet.Nimi)</th>*@
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Nimi)</td>
            @*<td>@Html.DisplayFor(modelItem => item.Tilaisuudet.Nimi)</td>*@
            <td align ="right">
                <a class="btn btn-primary" href="~/Jarjestajat/Edit/@item.JarjestajaID">Muokkaa</a>
                <a class="btn btn-primary" href="~/Jarjestajat/Details/@item.JarjestajaID">Tiedot</a>
                <a class="btn btn-danger" href="~/Jarjestajat/Delete/@item.JarjestajaID">Poista</a>

                @*@Html.ActionLink("Edit", "Edit", new { id = item.JarjestajaID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.JarjestajaID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.JarjestajaID })*@
            </td>
        </tr>
    }
</table>

@*Sivuttaminen eli sivujen lukumäärä*@
Sivu @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount

@*Seuraavan sivun klikkaus*@
@Html.PagedListPager(Model, page => Url.Action("Index", new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.currentFilter }))