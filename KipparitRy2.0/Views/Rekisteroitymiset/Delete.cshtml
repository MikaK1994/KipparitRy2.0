<div class="margin">
    @model KipparitRy2._0.Models.Rekisteroitymiset

    @{
        ViewBag.Title = "Delete";
    }

    <h2>Poista asiakas tilaisuudesta</h2>

    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>Asiakas</dt>
            <dd>@Html.DisplayFor(model => model.Asiakkaat.Nimi)</dd>
            <dt>Tilaisuus</dt>
            <dd>@Html.DisplayFor(model => model.Tilaisuudet.Nimi)</dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Poista" class="btn btn-danger" /> |
                <a class="btn btn-primary" href="~/Rekisteroitymiset/">Takaisin listaan</a>
            </div>
        }
    </div>
</div>