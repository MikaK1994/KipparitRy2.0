<div class="margin">
    @model PagedList.IPagedList<KipparitRy2._0.Models.Tilaisuudet>
    @using PagedList.Mvc;
    <link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

    @{
        ViewBag.Title = "Index";
    }

    <style>
        @@media (max-width: 800px) {
            .paiva, .max {
                display: none;
            }
            .btn {
                margin: 2px;
            }
            .btn-group1 {
                cursor: pointer; /* Pointer/hand icon */
                width: 50%; /* Set a width if needed */
                display: block; /* Make the buttons appear below each other */
                float: right;
            }
            .table {
                max-width: 100%;
                height: auto;
            }
        }

        @@media (max-width: 400px) {

            .table {
                max-width: 100%;
                height: auto;
                margin-left: -6.5%;
            }
        }
    </style>

    <h2>Tilaisuudet</h2>

    @using (Html.BeginForm("Index", "Tilaisuudet", FormMethod.Get))
    {
        <div class="input-group">
            @*Tämä tulostaa paragrafit rinnakkain, eikä erilleen*@
            @*px-1 meinaa, että ympärillä on paddingiä/tilaa*@
            <p class="px-1">@Html.Label("Etsi tilaisuuden nimellä:")</p> @*Otsikko*@
            <p class="px-1">@Html.TextBox("SearchString", ViewBag.currentFilter as string, new { @class = "form-control" })</p> @*Tällä nimellä kontrolleri näkee mitä tekstiboksiin on syötetty *@
            <p class="px-1"><input type="submit" value="Etsi" class="form-control" /></p> @*buttoni*@
        </div>
    }
    <p>
        @*@Html.ActionLink("Luo uusi", "Create")*@
        <a class="btn btn-primary" href="~/Tilaisuudet/Create/">Lisää uusi tilaisuus</a>
    </p>
    <table class="table table-striped">
        <tr>
            <th>Tilaisuus</th>
            <th class="paiva">@Html.ActionLink("Päivämäärä", "Index", new { sortOrder = ViewBag.DateSortParm, currentFilter = ViewBag.currentFilter })</th>
            <th class="max">Max osallistujat</th>
            <th>Järjestäjä</th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nimi)</td>
                <td class="paiva">@Convert.ToDateTime(item.Pvm).ToString("dd.MM.yyyy klo. HH:mm")</td>
                <td class="max">@Html.DisplayFor(modelItem => item.MaxMaara)</td>
                <td>@Html.DisplayFor(modelItem => item.Jarjestajat1.Nimi)</td>
                <td align="right" class="btn-group1">
                    <a class="btn btn-primary" style="margin:2px;" href="~/Tilaisuudet/Edit/@item.TilaisuusID"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                    <a class="btn btn-primary" style="margin:2px;" href="~/Tilaisuudet/Details/@item.TilaisuusID"><i class="fa fa-list" aria-hidden="true"></i></a>
                    <a class="btn btn-danger" style="margin:2px;" href="~/Tilaisuudet/Delete/@item.TilaisuusID"><i class="fa fa-times" aria-hidden="true"></i></a>

                    @*@Html.ActionLink("Muokkaa", "Edit", new { id=item.TilaisuusID }) |
                        @Html.ActionLink("Lisätiedot", "Details", new { id=item.TilaisuusID }) |
                        @Html.ActionLink("Poista", "Delete", new { id=item.TilaisuusID })*@
                </td>
            </tr>
        }
    </table>

    @*Sivuttaminen eli sivujen lukumäärä*@
    Sivu @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount

    @*Seuraavan sivun klikkaus*@
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.currentFilter }))
</div>